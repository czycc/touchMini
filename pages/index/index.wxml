<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{articles}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item.category}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view wx:for="{{articles}}" wx:for-item="category" wx:key="*this">
                    <view class="" hidden="{{activeIndex != index}}">
                        <view wx:for="{{category.articles}}" wx:key="*this">
                            <view class="weui-panel">
                                <view class="weui-panel__hd">
                                    <text>{{ item.title}}</text>
                                    <image class="item-more" src="/images/more.png" />
                                </view>
                                <view class="weui-panel__bd" data-id="{{item.id}}" data-resource="article">
                                    <navigator url="../show/show?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                                            <image class="weui-media-box__thumb" src="{{item.img_url}}" />
                                        </view>
                                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                                            <!-- <view class="weui-media-box__title weui-media-box__title_in-text"></view> -->
                                            <view class="weui-media-box__desc">{{ item.desc }}</view>
                                            <view class="weui-media-box__info">
                                                <view class="weui-media-box__info__meta">{{ item.wechat_users_name }}</view>
                                                <view class="weui-media-box__info__meta">{{ item.created_at }} {{ item.updated_at }}</view>
                                                <view class="weui-media-box__info__meta"></view>
                                            </view>
                                        </view>
                                    </navigator>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>