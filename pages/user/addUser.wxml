<view class="page">
    <view class="page__hd">
        <view class="page__title">新用户注册</view>
        <view class="page__desc">注册后需后台进行审核</view>
    </view>
    <form bindSubmit="formSubmit">
        <view class="weui-cells__title">用户名</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" name="name" placeholder="请输入用户名" required/>
                </view>
            </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" open-type="getPhoneNumber">获取手机号</button>
        </view>
        <view class="weui-cells__title">日期</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">开始</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{start}}" start="2016-06-01" end="2030-09-01" bindchange="startChange">
                        <view class="weui-input">{{start}}</view>
                    </picker>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">结束</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{end}}" start="2016-06-01" end="2030-09-01" bindchange="endChange">
                        <view class="weui-input">{{end}}</view>
                    </picker>
                </view>
            </view>
        </view>

        <view class="weui-cells__title">选择</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">参与人员</view>
                </view>
                <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <view class="weui-input">负责人</view>
                </picker>
            </view>
        </view>

<view class="weui-btn-area">
    <button class="weui-btn" type="primary" formType="submit">确定</button>
    <button class="weui-btn" type="warn" formType="reset">重置</button>

</view>
</form>
</view>