<!--pages/about/about.wxml-->
<import src="../../dist/wemark/wemark.wxml" />
<view class='page'>
    <view class="page__hd">
        <swiper indicator-dots="true" autoplay="true" circular="true" interval="5000" duration="500" previous-margin="0px" next-margin="0px" class='swiper'>
            <block wx:for="{{top_img}}" wx:key="*this">
                <swiper-item>
                    <image src="{{item}}" mode='scaleToFill' class='swiper' />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="page__bd">
        <view class="weui-article">
            <template is="wemark" data="{{...wemark}}"></template>
        </view>
    </view>
</view>